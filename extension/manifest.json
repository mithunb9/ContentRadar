{
  "manifest_version": 3,
  "name": "Sample Extension",
  "version": "1.0",
  "description": "An example Chrome extension with background and content scripts.",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
